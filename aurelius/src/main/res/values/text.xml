<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style
        name="Theme.Aurelius.Text.Headline"
        parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textColor">@color/text_highlighted</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="Theme.Aurelius.Text.Title.Large"
        parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textColor">@color/text_highlighted</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="Theme.Aurelius.Text.Title.Small"
        parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:letterSpacing">.019</item>
        <item
            name="android:lineHeight"
            tools:targetApi="28">
            18sp
        </item>
        <item name="android:textColor">@color/text_highlighted</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="Theme.Aurelius.Text.Body"
        parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:letterSpacing">.019</item>
        <item
            name="android:lineHeight"
            tools:targetApi="28">
            18sp
        </item>
        <item name="android:textColor">@color/text_default</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="Theme.Aurelius.Text.Label"
        parent="TextAppearance.Material3.BodySmall">
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textColor">@color/text_highlighted</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>